discover:
  how: fmf
provision:
  how: virtual
prepare:
  - how: install
    package:
      - git-core
      - curl
      - dnf
      - fakeroot
      - mock
      - nosync
      - createrepo_c
  - how: shell
    script: |
      dnf -y copr enable mizdebsk/mbici
      dnf -y install mbici-workflow
      cp -a mbici-run.sh /usr/local/bin/mbici-run
      useradd -u 18611 -G mock mbici
execute:
  how: tmt
